@import "variables"

*::selection
    color: invert($color-accent)
    background-color: $color-accent

a
    color: $color-link
    padding: 0 5px
    text-decoration: none;

    font-size: $font-size
    font-family: $font-family-body

    border-bottom: $color-link solid 1px

    &:hover
        text-shadow: 0 0 2px $color-body-bg, 0 0 4px
        color: $color-light
        border-bottom: $color-light solid 1px

h1,h2,h3,h4,h5,h6
    color: $color-head
    font-family: $font-family-body
    &:hover
        text-shadow: 0 0 2px $color-body-bg, 0 0 4px

h1
    color: $color-accent
    font-size: $font-h1-size
    position: relative;
    .h1_icon
        position: absolute;
        left: -1.2rem
        top: -4px
        font-size: $font-h2-size
        color: $color-text
        text-shadow: 0 0 5px

    &:before
        position: absolute;
        left: -1rem
        top: -4px
        font-size: $font-h2-size
        content: "*"
        color: $color-text

h2
    color: $color-lightest
    position: relative;
    .h2_icon
        position: absolute;
        left: -1rem
        top: -4px
        font-size: $font-h3-size
        color: $color-lightest
        text-shadow: 0 0 5px

    &:before
        position: absolute;
        left: -1rem
        top: -4px
        font-size: $font-h3-size
        content: "**"
        color: $color-text

h3
    color: $color-lightest
    position: relative;
    text-decoration: underline;
    .h3_icon
        position: absolute;
        left: -0.5rem
        top: -4px
        font-size: $font-size
        color: $color-lightest
        text-shadow: 0 0 5px

    &:before
        position: absolute;
        left: -1.3rem
        top: -4px
        font-size: $font-size
        content: "***"
        color: $color-text

h4.h4_icon
    color: $color-head
    position: absolute;
    left: -0.5rem
    top: -4px
    font-size: $font-size
    text-shadow: 0 0 5px

p, div
    cursor: default;
    border-radius: 2px
    padding: 0 2px
    color: $color-text
    font-family: $font-family-body
    time
        text-shadow: 0 0 1px $color-link, 0 0 3px $color-background-4

p, footer
    &:hover
        color: $color-accent
        text-shadow: 0 0 2px $color-body-bg, 0 0 1px $color-link, 0 0 3px $color-background-4
        background-color: $color-background2
        &::selection
            color: $color-lightest

span
    color: inherit;
    font-family: $font-family-body

footer
    color: $color-light
    font-size: smaller
    font-family: $font-family-body

svg
    color: $color-icon


table
    font-family: $font-family-body
    font-size: $font-size
    color: $color-text

ul
    padding: 0
    font-family: $font-family-body
    font-size: $font-size
    color: $color-text

    li
        list-style: none;
        padding: 0 5px
        color: $color-text

        font-family: $font-family-body
        font-size: $font-size
        p,
        a
            margin: 0

.hidden
    display: none

.no-before
    &:before
        display: none !important
