@import "variables"

h1,h2,h3,h4,h5,h6
    color: $color-head
    font-family: $font-family-body

h1
    color: $color-accent
    font-size: $font-h1-size
    position: relative;
    &:before
        position: absolute;
        left: -1rem
        top: -4px
        font-size: $font-h2-size
        content: "*"
        color: $color-text

h2
    color: $color-lightest
    position: relative;
    &:before
        position: absolute;
        left: -1rem
        top: -4px
        font-size: $font-h3-size
        content: "**"
        color: $color-text

h3
    color: $color-lightest
    position: relative;
    text-decoration: underline;
    &:before
        position: absolute;
        left: -1.3rem
        top: -4px
        font-size: $font-size
        content: "***"
        color: $color-text

p, div
    color: $color-text
    font-family: $font-family-body
    time
        color: $color-quiet

span
    color: inherit;
    font-family: $font-family-body

a
    color: $color-link
    padding: 0 5px
    text-decoration: none;

    font-size: $font-size
    font-family: $font-family-body

    border-bottom: $color-link solid 1px

    &:hover
        color: $color-light
        border-bottom: $color-light solid 1px

footer
    color: $color-light
    font-size: smaller
    font-family: $font-family-body

ul
    padding: 0
    font-family: $font-family-body
    font-size: $font-size
    color: $color-text

    li
        list-style: none;
        padding: 0 5px
        color: $color-text

        font-family: $font-family-body
        font-size: $font-size
        p,
        a
            margin: 0

table
    font-family: $font-family-body
    font-size: $font-size
    color: $color-text

.hidden
    display: none;

.back2top
    cursor: n-resize;
