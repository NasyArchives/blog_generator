    h1.title
        display: none
    .table_container
        overflow: auto
    dt
        font-weight: bold
    table
        width: 100%
        font-size: 13px
        border-collapse: collapse
        text-align: left
    th
        font-size: 14px
        font-weight: bold
        color: #ffa5a5
        border-bottom: 1px dashed #ccc
        padding: 8px 8px
    td
        border-bottom: none
        padding: 9px 8px 0px 8px


.head_flex
    display: flex
    flex-flow: row nowrap

.copyright
    color: $color-quiet
    font-size: smaller

.description
    font-size: smaller

.blog_link
    a
        color: $color-lightest
        font-size: $font-h2-size
        border: none
        &:hover
            text-shadow: 0 0 5px $color-body-bg, 0 0 10px
            border: none
            color: $color-head

.blog_link_tags
    display: flex
    flex-flow: row
    align-items: center
    > ul
        display: flex
        flex-flow: row wrap
        align-items: baseline

.blog_link_time
    display: flex
    flex-flow: row nowrap;
    align-items: center
    p
        padding: 0 7px
        time
            padding: 0 5px

.author
    display: flex
    flex-flow: row
    align-items: center
    p
        padding: 0 10px


.blog_link_summary_list
    display: flex
    flex-flow: row
    align-items: baseline
    p
        padding: 0 5px
        font-size: $font-size-small

.blog_link_tags_list
    padding: 5px

.tag_a
    padding: 0
    &:before
        content: "#"
        position: relative
        left: 1px
        top: -1px

.nlast_tag_a
    &:after
        content:","
