@import "variables"
@import "basic"
@import "html_bg"
@import "highlight"
@import "gitalk"

html
    display: flex
    justify-content: center
    align-items: stretch
    > div
        position: relative;

body
    overflow: scroll
    padding: 0vh 2vw
    margin: 0vh
    min-height: 100vh
    width: 100%
    max-width: 50rem

    background-color: $color-background

    border-radius: 1rem
    box-shadow:
        4px 4px 10px invert($color-background3),
        -4px -4px 10px invert($color-background3),
        inset 4px 4px 10px invert($color-background3),
        inset -4px -4px 10px invert($color-background3)
    &:hover
        box-shadow:
            4px 4px 10px invert($color-background3),
            -4px -4px 10px invert($color-background3),
            inset 4px 4px 10px $color-background-1,
            inset -4px -4px 10px $color-background-1,
            5px 5px 10px $color-background-4,
            -5px -5px 10px $color-background-4

    display: flex
    flex-flow: column nowrap
    justify-content: space-between
    align-items: stretch


    .body-item
        flex: none
        padding: 0vh 2vw

    #main
        flex-grow: 1

#up2top
    display: flex
    flex-flow: row;
    align-items: center;
    justify-content: center;
    cursor: n-resize
    padding: 1px

    border-radius: 1rem
    &.page_up2top
        position: fixed;
        bottom: 20px
        width: 2rem
        right: 30vw - 22rem
        box-shadow:
            0 0 3px $color-lightest-transparen,
            inset 0 0 3px $color-lightest-transparen
        @media(max-width: 768px ){
            right: 5vw
        }

#up2top, .icon
    border-radius: 1rem
    &:hover
        svg
            color: $color-accent
            text-shadow: 0 0 5px $color-body-bg, 0 0 10px
        box-shadow:
            0 0 2px $color-head-transparen,
            inset 0 0 2px $color-head-transparen,
            1px 1px 3px $color-head-transparen,
            -1px -1px 3px $color-head-transparen

#head_ptn
    li>a
        padding: 1px

#header
    border-radius: 0.5rem
    border-bottom: $color-head solid 1px
    &:hover
        box-shadow: 0 2px 5px $color-head

#header-nav
    ul
        display: flex
        flex-flow: row

#blog_meta
    display: flex
    flex-flow: column nowrap
    > div, p, ul
        margin: 1px 2px

#writing-container
    > ul
        display: flex
        flex-flow: column nowrap

#footer
    border-radius: 0.5rem
    border-top: $color-head solid 1px
    &:hover
        box-shadow: 0 -2px 5px $color-head
        p
            background-color: inherit;

.blog_link_list
    transition-duration: 0.2s
    display: flex
    flex-flow: column nowrap
    padding: 10px 5px
    margin: 5px 0
    background-color: $color-background2
    border-radius: 1rem
    border-color: $color-lightest
    border-width: 4px
    border-style: none none dashed none
    box-shadow:
        2px 2px 5px $color-lightest-transparen,
        -2px -2px 5px $color-lightest-transparen,
        inset 2px 2px 5px $color-lightest-transparen,
        inset -2px -2px 5px $color-lightest-transparen
    > div
        margin: 5px 2px
    &:hover
        border-color: $color-head
        border-style: none none solid none
        box-shadow:
            4px 4px 10px $color-head-transparen,
            -4px -4px 10px $color-head-transparen


#toc
    transition: none
    z-index: 1
    max-width: 16vw
    min-width: 140px
    min-height: 180px
    overflow: auto
    position: fixed
    right: 2rem
    top: 2rem
    background-color: $color-background
    border-radius: 1rem
    box-shadow:
        0 0 5px invert($color-background),
        inset 0 0 5px invert($color-background)

    @media (max-width: 768px){
        right: 0
        box-shadow: none
        max-height: 25vh
        display: none
        background-color: $color-background3
    }
    a
        border-bottom: none
    .text-table-of-contents
        padding: 0 5px
        li, a
            width: 100%
            display: inline-block
            text-align: right
            padding: 0
            border-bottom: none
            background-color: $color-background
        a
            border-bottom: invert($color-background) dashed 1px
        > ul > li
            > a
                color: $color-accent
                &:hover
                    text-shadow: 0 0 5px $color-body-bg, 0 0 10px
                    box-shadow:
                        0 0 5px $color-accent
                        inset 0 0 5px $color-accent
            > ul > li
                > a
                    color: lighten(invert($color-background), 30%)
                    font-size: smaller
                    &:hover
                        color: $color-accent
                        text-shadow: 0 0 3px $color-body-bg, 0 0 6px
                        box-shadow:
                            0 0 3px $color-accent
                            inset 0 0 3px $color-accent
                > ul > li
                    > a
                        color: invert($color-background)
                        font-size: x-small
                        &:hover
                            color: $color-accent
                            text-shadow: 0 0 2px $color-body-bg, 0 0 5px
                            box-shadow:
                                0 0 3px $color-accent
                                inset 0 0 3px $color-accent

#menu-icon
    position: fixed
    top: 0.7rem
    right:2rem
    border-bottom: none
    z-index: 1
    cursor: pointer
    @media (max-width: 768px){
        right: 0.2rem
    }

#show_info
    position: fixed
    right: 3.7rem
    top: 0.7rem
    z-index: 1
    text-align: center
    padding: 0px 5px

    display: flex

    transition: none

    background: $color-background
    border-radius: 1rem
    box-shadow:
        0 0 5px invert($color-background),
        inset 0 0 5px invert($color-background)

    span
        transition: none

    @media (max-width: 768px){
        display: none
    }

