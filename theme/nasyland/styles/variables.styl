// Fonts
$font-family-body = "Chalkboard", "comic sans", "PingFang SC", "Meslo LG", "sans-serif"
$font-family-mono = "hermit","operator","Menlo", "Meslo LG", monospace
$font-family-tt = "Inconsolata", monospace
$font-h1-size = 1.5rem
$font-h2-size = 1.2rem
$font-h3-size = 1.1rem
$font-size = 1rem
$line-height = 1.725

// Colors
$color-background = rgba(24, 29, 35, 0.4)
$color-background2 = rgba(24, 29, 35, 0.2)

$color-background-1 = rgba(95, 114, 178, 0.5)
$color-background-2 = rgba(211, 119, 111, 0)
$color-background-3 = rgba(211, 119, 111, 0.5)
$color-background-4 = rgba(247, 179, 85, 0.5)
$color-background-5 = rgba(247, 179, 85, 0)
$color-body-bg = rgb(32, 25, 45)

// 遗留
// $color-background-1 = rgba(11, 36, 45, 0.5)
// $color-background-3 = rgba(19, 22, 26, 0.5)
// $color-background-4 = rgba(22, 28, 33, 0.5)

$color-link = #A8D8EA
$color-text = #DCEDC1
$color-light = #E0F9B5
$color-lightest = #FFA5A5
$color-head = #9EFCB4
$color-accent = #FEFDCA
$color-quiet = rgba(255, 236, 218, 0.6)
$ease-in-sine = cubic-bezier(0.47, 0, 0.745, 0.715);

// ALL
*
    transition: all 0.5s $ease-in-sine
    &:before,
    &:after
        box-sizing: border-box
